@model AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<h1 style="text-align:center">Account Detail</h1>
<div style="display: flex; flex-direction: column; align-items: center; text-align: center; max-width: 600px; margin: 0 auto;">
    <h2 style="font-size: 24px; font-weight: bold; margin-bottom: 10px;">@Model.Fullname</h2>
    <p style="font-size: 18px; color: #777; margin-bottom: 10px;"><strong>Email: </strong>@Model.Email</p>
    <p style="font-size: 16px; color: #777; margin-bottom: 5px;"><strong>Username: </strong>@Model.UserName</p>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-github">Update Settings: </a>
</div>

