@model UserReadVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex align-items-center mb-4">
                    <h4 class="card-title mb-sm-0">Users Inventory</h4>
                    <a asp-area="AdminArea" asp-controller="Dashboard" asp-action="Index" class="text-dark ml-auto mb-3 mb-sm-0"> View all Products</a>
                    
                    
                </div>
                <br />
                <form asp-controller="User" asp-action="Index">
                    <input class="form-control" name="search" value="" placeholder="Fullname"/>
                    <br />
                    <button class="btn btn-info" type="submit"> Search </button>
                </form>
                <div class="table-responsive border rounded p-1">
                    <a asp-area="AdminArea" asp-controller="User" asp-action="Create" class="btn btn-success">Create</a>
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">FullName:</th>
                                <th class="font-weight-bold">Username:</th>
                                <th class="font-weight-bold">Email:</th>
                                <th class="font-weight-bold" style="text-align:center"> Status:</th>
                                <th class="font-weight-bold" style="text-align:center"> Settings:</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (AppUser item in Model.AppUsers)
                            {
                                <tr>
                                    <td>
                                        @item.Fullname
                                    </td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    @if (!item.IsActive)
                                    {
                                        <td>
                                            <div class="badge badge-success p-2">Active</div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <div class="badge badge-danger p-2">Deactive</div>
                                        </td>
                                    }
                                    <td>
                                        <ul style="display: flex; justify-content:space-between;list-style-type:none">
                                            <li>
                                                <a asp-area="AdminArea" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id"> <i class="icon-docs" style="color:blue;font-size:40px"></i></a>
                                            </li>
                                            <li>
                                                <a asp-area="AdminArea" asp-controller="User" asp-action="UpdateRole" asp-route-id="@item.Id"><i class="icon-pencil" style="color:yellow;font-size:40px"></i></a>
                                            </li>
                                            <li>
                                                <a asp-area="AdminArea" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id"><i class="icon-trash" style="color:red;font-size:40px"></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <div class="d-flex mt-4 flex-wrap">
                    <nav class="ml-auto">
                        <ul class="pagination separated pagination-info">
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(Model.CurrentPage==i?"disabled":"")">
                                    <a asp-action="index" asp-route-page="@i" class="page-link">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


