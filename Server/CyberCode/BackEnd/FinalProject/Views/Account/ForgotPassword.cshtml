@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="forgot-section">
<div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="backgr-img">
                    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                        <div class="mb-3">

                            <label asp-for="Email" class="email-label" >Email</label>
                            <input class="form-control" asp-for="Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
    
    </div>
</div>
</section>

